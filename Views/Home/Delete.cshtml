@{
    ViewData["Title"] = "Deletion Confirmation";
}
@model burialmain

<div class="container">
    <h3>Are you sure you want to delete @Model.burialidcomp?</h3>

    <form asp-controller="Home" asp-action="Delete" method="post" class="mt-3">
        <div class="form-group">
            <button type="submit" class="btn btn-danger mr-3">Delete</button>
            <a asp-controller="Home" asp-action="CRUD" class="btn btn-secondary">Cancel</a>
            <input type="hidden" asp-for="burialidcomp" />
        </div>
    </form>
</div>
