@{
    ViewData["Title"] = "Deletion Confirmation";
}
@model burialmain

<h3>Are you sure you want to delete @Model.id? </h3>

<form asp-controller="Home" asp-action="Delete" method="post">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Burials" class="btn-primary">Cancel</a>
    <input type="hidden" asp-for="id" />
</form>