@{
}

@model burialmain
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>Burial ID: @Model.burialidcomp</h3>
    </div>

    <div class="card-text p-1"><b>Head Direction:</b> @Model.headdirection</div>
    <div class="card-text p-1"><b>Sex: </b>@Model.sex</div>
    <div class="card-text p-1"><b>Hair Color: </b>@Model.haircolor</div>
    <div class="card-text p-1"><b>Age at death: </b>@Model.ageatdeath</div>
    <form method="post" asp-controller="Home" asp-action="BurialDetail" asp-route-burialidcomp="@Model.burialidcomp">
        <input type="hidden" asp-for="@Model.burialidcomp" />
        <span class="card-text">
            <button type="submit" class="btn btn-outline-dark btn-sm float-end">Details</button>
        </span>
    </form>
</div>

