@{
}
@model IEnumerable<string>

<div class="d-grid gap-1">
@foreach (string aod in Model)
{
    <a asp-controller="Home" asp-action="Burials"
   asp-route-hairColor="@ViewBag.SelectedHairColor"
   asp-route-ageAtDeath="@aod"
   asp-route-burialDepth="@ViewBag.SelectedBurialDepth"
   asp-route-bSex="@ViewBag.SelectionSex"
   asp-route-pageNum="1"
       class="btn @(ViewBag.SelectedAOD == aod ? "btn-primary" : "btn-outline-secondary")">@aod</a>
    <br />
}
</div>
